{
  "name": "raft-modding-website",
  "version": "1.9.2",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node built/bin/www",
    "dev": "ts-node src/bin/www",
    "lint": "eslint --ext .js,.ts ./src",
    "dotenv:init": "ts-node ./src/bin/dotenv-init",
    "db:start": "ts-node ./src/bin/database start",
    "db:stop": "ts-node ./src/bin/database stop"
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "@typescript-eslint/semi": [
        "error",
        "always"
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@raftmodding/discord-notification-client": "^1.1.0",
    "@sentry/node": "^5.6.2",
    "archiver": "^3.1.1",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.3.1",
    "btoa": "^1.2.1",
    "colors": "^1.4.0",
    "connect-session-sequelize": "^6.0.0",
    "cookie-parser": "^1.4.3",
    "cookieconsent": "^3.1.1",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-basic-auth": "^1.2.0",
    "express-session": "^1.15.6",
    "google-recaptcha": "^1.1.0",
    "http-errors": "~1.6.2",
    "jquery": "^3.4.1",
    "less-middleware": "^3.1.0",
    "make-runnable": "^1.3.8",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "nanoid": "^2.0.1",
    "node-fetch": "^2.5.0",
    "nodemailer": "^6.1.1",
    "nodemon": "^1.19.1",
    "pg": "^8.5.1",
    "pug": "^2.0.3",
    "rimraf": "^2.7.0",
    "sequelize": "^5.19.0",
    "showdown": "^1.9.0",
    "showdown-htmlescape": "^0.1.9",
    "showdown-xss-filter": "^0.2.0",
    "simplemde": "^1.11.2",
    "throttled-queue": "^1.0.5",
    "typescript": "^4.1.3",
    "virustotal-api": "^1.0.3",
    "winston": "^3.3.3",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "ts-node": "^9.1.1"
  }
}
