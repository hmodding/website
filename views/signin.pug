extends layout

block content
    div.index-section#formcontainer
        form(method='post' action='/signin?' + redirectQuery)#signin
            h1 Log in
            if error
                div#error(style='background-color: red; color: white;')=error
            div(style='width: 100%; display: flex; flex-direction: row; justify-content: space-between; align-items: center;')
                input(type='text' placeholder='Username' name='username')#username
                input(type='password' placeholder='Password' name='password')#password
            input(type='submit' value='Sign in' style='display: inline-block; padding: 8px 16px; color: white; font-weight: 600; background-color: green; width: auto; border-radius: 5px; box-shadow: 1px 2px 2px 2px rgba(1,1,1,0.1);')
        ul(style='text-align: left;')
            li Need an account? #[a(href='/signup?' + redirectQuery) Sign up]
            li Forgot you password? #[a(href='/forgotpassword?' + redirectQuery) Request a new one]