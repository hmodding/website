extends layout

prepend pageVariables
    - title = user.username

block content
    section.my-5
        h1.my-3=`${user.username}'s mods`
        if authoredMods.length === 0
            i=`${user.username} hasn't published any mods yet.`
        else
            include mod/list
            +mod-list(authoredMods)
    if enableBundlesSection
        section.my-5
            h1.my-3=`${user.username}'s mod bundles`
            if maintainedBundles.length === 0
                i=`${user.username} hasn't published any mod bundles yet.`
            else
                include bundle/list
                +bundle-list(maintainedBundles)
    if enablePluginsSection
        section.my-5
            h1.my-3=`${user.username}'s plugins`
            if maintainedPlugins.length === 0
                i=`${user.username} hasn't published any plugins yet.`
            else
                include plugin/list
                +plugin-list(maintainedPlugins)
