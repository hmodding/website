extends layout

block content
    section.my-3
        h1=mod.title
        p(style='max-width: 100%;')=mod.description
    section.my-3
        div.row
            div.col-sm-9.my-3
                div.card
                    if mod.bannerImageUrl
                        img(src=mod.bannerImageUrl alt=('banner for the ' + mod.title + ' mod')).card-img-top
                    div.card-body
                        div.card-text#mod-readme!=mod.readmeMarkdown
                        p.card-text
                            small.text-muted Last updated on #{new Date(mod.updatedAt).toISOString().split('T')[0]}
            div.col-sm-3.my-3
                ul.list-group
                    li.list-group-item
                        i.fas.fa-list-ul
                        |  This is a #[b=mod.category] mod.
                    li.list-group-item
                        i.fas.fa-hashtag
                        |
                        | Version
                        |
                        span=mod.version
                    li.list-group-item
                        i.fas.fa-user-circle
                        |
                        | by
                        |
                        span
                            a(href=`/user/${mod.author}`)=mod.author
                    if userIsOwner
                        li.list-group-item
                            i.fas.fa-pencil-alt
                            |
                            | Only you can
                            |
                            span
                                a(href='/mods/' + mod.id + '/edit') edit this mod
                    li.list-group-item.download
                        i.fas.fa-arrow-alt-circle-down
                        |
                        | Download via
                        |
                        span
                            a(href='/mods/' + mod.id + '/download') #{mod.downloadUrl.startsWith('/') ? 'this' : 'external'} site
