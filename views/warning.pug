extends layout

prepend pageVariables
  - title = title || 'Warning'

append seoTags
  meta(name='robots' content='noindex')

block content
    .row.justify-content-center.my-5
        .card.w-50
            .card-body
                h4.card-title.mb-4=(warning.title || 'Hold on for a sec\'...')
                p.card-text.text-justify!=warning.text
                hr.mb-0
            .card-footer.bg-white.border-0.mt-0.pt-0
                a(href=continueLink).btn.btn-outline-danger Continue anyways
                a(href=(backLink || 'javascript:history.back()')).btn.btn-success.float-right Go back
